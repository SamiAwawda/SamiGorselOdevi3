<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SamiGorselOdevi3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SamiGorselOdevi3"
    Shell.FlyoutBehavior="Flyout"
    Title="SamiGorselOdevi3">

    <ShellItem Title="KayitSayfasi" Icon="login.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </ShellItem>

    <ShellItem Title="Giriş" Icon="home.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:AnaSayfa}"
            Route="AnaSayfa" />
    </ShellItem>
    
   
    <ShellItem Title="Kurlar" Icon="money.png">
        <ShellContent
ContentTemplate="{DataTemplate local:DovizKurlari}"
Route="DovizKurlari" />
    </ShellItem>
    
    <ShellItem Title="Haberler" Icon="news.png">
        <ShellContent
            ContentTemplate="{DataTemplate local:Haberler}"
            Route="Haberler" />
    </ShellItem>
    <ShellItem Title="HavaDurumu" Icon="weather.png" >
        <ShellContent
        ContentTemplate="{DataTemplate local:HavaDurumu}"
         Route="HavaDurumu" />

    </ShellItem>
    <ShellItem Title="Yapılacaklar" Icon="to_do_list.png">
        <ShellContent
ContentTemplate="{DataTemplate local:NotesPage}"
Route="NotesPage" />
    </ShellItem>
    <ShellItem Title="Ayarlar" Icon="settings.png">
        <ShellContent
  ContentTemplate="{DataTemplate local:Ayarlar}"
  Route="Ayarlar" />
    </ShellItem>
</Shell>
